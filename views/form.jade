extends ./layouts/base

block content
  .dogbox
    form(action="/form", method="post")
      input(type="hidden" name="_csrf" value="#{csrfToken}")
      label(for="name") Name:
      br
      input(type="text", name="name", placeholder="David Bowie")
      br
      label(for="saying") Say something:
      br
      input(type="text", name="saying", placeholder="They call them the Diamond Dogs")
      br
      input(type="submit", value="submit")
